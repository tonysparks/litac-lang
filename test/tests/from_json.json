    {
      "name": "From Json Struct",
      "definitions": `
                import "std/json";
                import "std/json/from_json";
                import "std/json/to_json";
                import "std/string/builder";
                import "std/string";
                import "std/io";
                import "std/libc";
                import "std/mem";

                @asStr
                @json
                public enum ParamType {
                    UNKNOWN,
                    @json(.name = "string")
                    STRING,
                    INT,
                    FLOAT
                }

                @json
                public struct Test {
                    aStr: *const char
                    aInt: i32
                    aFloat: f32

                    @json(.ignore = true)
                    shouldNotBe: i32

                    aEnum: ParamType
                }
            `,
      "code": `
                var test = Test {}

                var json = """
                {
                    "aStr": "Hello World",
                    "aInt": 4,
                    "aFloat": 3.14,
                    "aEnum": "string",
                }
                """

                var parser = JsonParser{}
                parser.init()
                defer parser.free()

                var node = parser.parseJson(json)
                defer if(node) node.free()

                assert(node != null)
                assert(!parser.hasError())

                var context = JsonContextInit()
                test.fromJson(&context, node)
                assert(strcmp(test.aStr, "Hello World") == 0)
                assert(test.aInt == 4)

                var x = test.aFloat - 3.14
                assert(x < 0.1 && x > -0.1)
                assert(test.aEnum == ParamType.STRING)
                //printf("S: %s I: %d\n", test.aStr, test.aInt)
                //context.bind(typeof(:Test), &test)
            `
